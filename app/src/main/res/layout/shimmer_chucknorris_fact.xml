<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_cardheight"
    android:layout_margin="@dimen/dim_5sp"
    android:elevation="@dimen/dim_10sp"
    app:cardCornerRadius="@dimen/dim_10sp"
    app:strokeColor="@color/grey"
    app:strokeWidth="@dimen/strokewidth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dim_10sp">

        <TextView
            android:id="@+id/tVfunFact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:justificationMode="inter_word"
            app:layout_constraintBottom_toTopOf="@+id/chipCategories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chipCategories"
            android:layout_width="@dimen/dim_50sp"
            android:layout_height="@dimen/dim_20sp"
            android:layout_marginTop="@dimen/dim_5sp"
            android:background="@color/grey"
            android:text="@string/uncategorized"
            android:textSize="@dimen/dim_10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tVfunFact" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>